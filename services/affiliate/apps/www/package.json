{
  "name": "@refref/www",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm fetch-content && pnpm build:docs && pnpm lint && next build && pnpm build:sitemap",
    "build:sitemap": "pnpm exec tsx ./scripts/generate-sitemap.mts",
    "build:docs": "node ./scripts/generate-docs.mjs",
    "dev": "infisical run --env=dev -- next dev || next dev",
    "start": "next start",
    "postinstall": "fumadocs-mdx",
    "serve": "serve out -p 3000",
    "fetch-content": "infisical run --env=dev -- pnpm exec tsx ./scripts/fetch-content.mts || pnpm exec tsx ./scripts/fetch-content.mts",
    "cleanup-content": "pnpm exec tsx ./scripts/cleanup-content.mts",
    "refresh-content": "pnpm cleanup-content && pnpm fetch-content",
    "lint": "fumadocs-mdx && tsx ./scripts/lint.mts",
    "type:check": "tsc --noEmit"
  },
  "dependencies": {
    "@next/third-parties": "^16.0.2",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@shikijs/rehype": "^1.26.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.4.11",
    "fumadocs-core": "15.0.11",
    "fumadocs-docgen": "^1.3.6",
    "fumadocs-mdx": "11.1.2",
    "fumadocs-openapi": "^7.0.0",
    "fumadocs-twoslash": "^3.1.0",
    "fumadocs-ui": "15.0.11",
    "geist": "^1.3.1",
    "globby": "^14.1.0",
    "hast-util-to-jsx-runtime": "^2.3.2",
    "lucide-react": "^0.476.0",
    "next": "16.0.7",
    "next-plausible": "^3.12.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.0",
    "rehype-katex": "^7.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-mdx": "^3.1.0",
    "remark-rehype": "^11.1.1",
    "shiki": "^1.24.3",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.758.0",
    "@refref/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.0.7",
    "@types/mdx": "^2.0.13",
    "@types/node": "22.13.4",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.7",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "next-validate-link": "^1.5.2",
    "postcss": "^8.5.3",
    "rimraf": "^6.0.1",
    "serve": "^14.2.4",
    "tailwindcss": "^4.0.7",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
